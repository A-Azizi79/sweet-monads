{
  "compilerOptions": {
    "module": "commonjs",
    "lib": ["es2018"],
    "target": "es2015",
    "declaration": true,
    "noImplicitAny": true,
    "removeComments": true,
    "strictNullChecks": true,
    "preserveConstEnums": true,
    "experimentalDecorators": true,
    "downlevelIteration": true,
    "outDir": "./build"
  },
  "include": ["./index.ts"],
  "exclude": ["node_modules"]
}
